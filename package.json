{
  "name": "RSS",
  "description": "Simple RSS reader utilising Electron and ReactJS with partial Feedly support",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "Salman Rameli",
    "email": "salmanrameli@gmail.com"
  },
  "build": {
    "appId": "com.salmanrameli.simple-rss-reader",
    "productName": "Simple RSS Reader",
    "copyright": "Copyright Â© 2019 ${author}",
    "asar": false,
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/*",
      "src/*",
      "electron-wait-react.js",
      "main.js",
      "Procfile"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bluebird": "^3.5.4",
    "cross-env": "^5.2.0",
    "date-and-time": "^0.6.3",
    "electron-is-dev": "^1.1.0",
    "electron-json-storage": "^4.1.6",
    "electron-store": "^3.2.0",
    "feedparser": "^2.2.9",
    "jsonfile": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-electron-web-view": "^2.0.1",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "react-spinners": "^0.5.4",
    "string-to-stream": "^1.1.1"
  },
  "scripts": {
    "react-start": "PORT=8080 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:8080 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.43.0",
    "foreman": "^3.0.1",
    "typescript": "^3.5.1",
    "wait-on": "^3.2.0"
  }
}
